@model IEnumerable<biblio.Models.autor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>
                Nombre Autor
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreautor)
                </td>
                <td id="accion">
                   
                    <button class="btn">
                        <i class="glyphicon glyphicon-file"></i>
                        @Html.ActionLink("Detalles", "Details", new { id = item.idautor })
                    </button>

                    <button class="btn btn-primary">
                        <i class="glyphicon glyphicon-edit"></i>
                        @Html.ActionLink("Editar", "Edit", new { id = item.idautor })
                    </button>
                    <button class="btn btn-danger">
                        <i class="glyphicon glyphicon-erase"></i>
                        @Html.ActionLink("Delete", "Delete", new { id = item.idautor })
                    </button>

                </td>
            </tr>
        }

    </table>

</div>
