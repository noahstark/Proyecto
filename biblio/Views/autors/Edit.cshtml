@model biblio.Models.autor

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4> Editar Autor</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idautor)

    <div class="form-group">
        @*@Html.LabelFor(model => model.idautor, "idautor", htmlAttributes: new { @class = "control-label col-md-2" })*@
        <label>Nombre autor</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.nombreautor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombreautor, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

<p>
        <input type="submit" value="Guardar" class="btn btn-default" />
        @Html.ActionLink("Regresar a la lista", "Index")
</p>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

