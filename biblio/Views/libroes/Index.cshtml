@model IEnumerable<biblio.Models.libro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hove">
            <tr>
                <th>
                    Titulo libro
                </th>
                <th>
                    Editorial
                </th>
                <th>
                    Pais
                </th>
                <th>
                    Año
                </th>
                <th>
                    Paginas
                </th>
                <th>
                    Existencia
                </th>
                <th>
                    Fecha ingreso
                </th>
                <th>
                    Autor
                </th>
                <th>

                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.titulolibro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.editorial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.pais)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.año)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.npag)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.existencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechaingreso)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.autor.nombreautor)
                    </td>

                    <td>
                        <button class="btn">
                            <i class="glyphicon glyphicon-file"></i>
                            @Html.ActionLink("Detalles", "Details", new { id = item.idlibro })
                        </button>
                        <button class="btn btn-primary">
                            <i class="glyphicon glyphicon-edit"></i>
                            @Html.ActionLink("Editar", "Edit", new { id = item.idlibro })
                        </button>
                        <button class="btn btn-danger">
                            <i class="glyphicon glyphicon-erase"></i>
                            @Html.ActionLink("Borrar", "Delete", new { id = item.idlibro })
                        </button>
                    </td>
                </tr>
            }

        </table>
    </div>



