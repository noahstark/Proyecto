@model biblio.Models.libro

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>


    <h4>libro</h4>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hove">

            <tr>
                <th>
                    Titulo libro
                </th>
                <th>
                    Editorial
                </th>
                <th>
                    Pais
                </th>
                <th>
                    Año
                </th>
                <th>
                    Paginas
                </th>
                <th>
                    Existencia
                </th>
                <th>
                    Fecha ingreso
                </th>
                <th>
                    Autor
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.titulolibro)
                </td>
                <td>
                    @Html.DisplayFor(model => model.editorial)
                </td>
                <td>
                    @Html.DisplayFor(model => model.pais)
                </td>
                <td>
                    @Html.DisplayFor(model => model.año)
                </td>
                <td>
                    @Html.DisplayFor(model => model.npag)
                </td>
                <td>
                    @Html.DisplayFor(model => model.existencia)
                </td>
                <td>
                    @Html.DisplayFor(model => model.fechaingreso)
                </td>

                <td>
                    @Html.DisplayFor(model => model.autor.nombreautor)
                </td>

            </tr>
        </table>

    </div>
<p>
    <button class="btn btn-primary">
        <i class="glyphicon glyphicon-edit"></i>
        @Html.ActionLink("Editar", "Edit", new { id = Model.idlibro })
    </button>
    @Html.ActionLink("Regresar ala Lista", "Index")
</p>
